                        Click="BtnTask2_Click"
                        Foreground="Black"
                        Content="2"
                        ToolTip="Задание №2" BorderBrush="White" Width="50" Height="40" FontSize="20" BorderThickness="3,3,3,3"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

